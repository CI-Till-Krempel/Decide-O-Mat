{
    "name": "functions",
    "description": "Cloud Functions for Decide-O-Mat",
    "scripts": {
        "lint": "eslint .",
        "serve": "firebase emulators:start --only functions",
        "shell": "firebase functions:shell",
        "start": "node -e 'require(\"http\").createServer((_,r)=>r.end(\"Decide-O-Mat Functions Container\")).listen(process.env.PORT||8080);'",
        "start:shell": "npm run shell",
        "deploy": "firebase deploy --only functions",
        "logs": "firebase functions:log"
    },
    "engines": {
        "node": "20"
    },
    "main": "index.js",
    "dependencies": {
        "firebase-admin": "^13.6.0",
        "firebase-functions": "^7.0.0"
    },
    "devDependencies": {
        "eslint": "^8.9.0",
        "eslint-config-google": "^0.14.0"
    },
    "private": true
}